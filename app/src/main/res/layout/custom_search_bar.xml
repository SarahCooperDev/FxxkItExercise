<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        style="@style/DesertSearchBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@null"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_margin="0dp"
            android:id="@+id/search_btn"
            android:text="Search button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search" />
        <LinearLayout
            android:id="@+id/search_bar_layout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageButton
                android:background="@null"
                android:id="@+id/filter_search_btn"
                android:text="Filter search button"
                android:scaleType="fitXY"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:padding="3dp"
                android:src="@drawable/ic_filter"></ImageButton>
            <EditText
                android:id="@+id/search_edit"
                android:hint="Search..."
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"></EditText>
            <ImageButton
                android:background="@null"
                android:id="@+id/search_clear_btn"
                android:text="Search clear button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_cancel"></ImageButton>
        </LinearLayout>
        <ImageButton
            android:background="@null"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:id="@+id/sort_btn"
            android:text="Sort button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sort" />
    </LinearLayout>
</LinearLayout>