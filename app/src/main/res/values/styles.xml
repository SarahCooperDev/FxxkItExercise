<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    <style name="Desert" parent="Theme.AppCompat.Light">
        <!-- Floating action buttons -->
        <item name="colorAccent">@color/desert_yellow</item>
        <!-- All text color
        <item name="android:textColor">@color/desert_red</item>-->
        <!-- The very top of the action bar (where time and battery is shown) -->
        <item name="android:colorPrimaryDark">@color/desert_red</item>
        <!--
        <item name="android:colorPrimary">@color/desert_yellow</item> -->
        <!-- The background of activity/fragment, if not overridden by background -->
        <item name="android:windowBackground">@color/desert_red</item>
        <!-- The background of every view (action bar, recyclerview element
        <item name="android:background">@color/desert_yellow</item>-->
    </style>
    <style name="DesertList" parent="Desert">
        <item name="android:colorPrimaryDark">@color/desert_white</item>
        <item name="android:background">@color/desert_white</item>
        <item name="android:windowBackground">@color/desert_white</item>
    </style>
    <style name="DesertActionBar" parent="Desert">
        <!-- Sets the background of the action bar to yellow -->
        <item name="android:background">@color/desert_orange</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="DesertInput" parent="Desert">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="DesertDisplay" parent="Desert">
        <item name="android:background">@color/desert_yellow</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="DesertRow" parent="Desert">
        <item name="android:textColor">@color/desert_red</item>
        <item name="android:background">@color/desert_white</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>